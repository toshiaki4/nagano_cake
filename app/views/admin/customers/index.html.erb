<span style="color:#000000; background-color:#C0C0C0;">会員一覧<span></span>
<div class="container">
    <div class="row">
      <table class="table">
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">氏名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <% if customer.is_active == true %>
          <td><span style="color:green">有効</span></td>
          <% else %>
          <td><span style="color:gray">退会</span></td>
          <% end %>
        </tr>
        <% end %>
      </table>  
    </div>    
</div>
<%= paginate @customers %>