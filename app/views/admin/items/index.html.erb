<span style="color:#000000; background-color:#C0C0C0;">商品一覧</span>
    <div class="text-right">
    <%= link_to new_admin_item_path do %>
      <button type="button", class="btn btn-primary rounded-circle p-0", style="width:2rem;height:2rem;" >＋</button>
    <% end %>
    </div>
    <div class="container">
    <div class="row">
    <table class="table"> 
        <tr>
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
          <th scope="col">ジャンル</th>
          <th scope="col">ステータス</th>
          <th></th>
        </tr>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <% if item.is_active == true %>
          <td><span style="color:green">販売中</span></td>
          <% else %>
          <td><span style="coloe:gray">販売停止中</span></td>
          <% end %>
        </tr>
        <% end %>
    </table>
    </div>    
</div> 
<%= paginate @items %>

