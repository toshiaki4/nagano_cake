<span style="color:#000000; background-color:#C0C0C0;">商品編集</span>

<%= form_with model: @item, url: admin_items_path, method: :post, local:true do |f| %>
  <span>商品画像</span>
  <%= f.attachment_field :image %><br>
  <span>商品名</span>
  <%= f.text_field :name %><br>
  <span>商品説明</span>
  <%= f.text_area :introduction %><br>
  <span>ジャンル</span>
  <%= f.collection_select  :genre_id, Genre.all, :id, :name  %><br>
  <span>税抜き価格</span>
  <%= f.text_field :price %>円<br>
  <span>販売ステータス</span>
  <%= f.radio_button :is_active, true %>販売中 <%= f.radio_button :is_active, false %>販売停止中<br>
  <%= f.submit '変更を保存', class:"btn btn-success" %>
<% end %>