<% if customer_signed_in? %>
  <% current_customer %>
<% end %>

<div class="container">
  <h2>商品一覧(全<%= @item.count %>件)</h2>
  <div class="row">
    
    <% @items.each do |item| %>
    <div class="col-md-3">

        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, fallback: "no_image.jpg", format: 'jpeg', size: "200x150" %>
        <% end %>
        <div><%= item.name %></div>
        <div>¥<%= item.price %></div>
      </div>
      <% end %>
      
    </div>
    
  </div>
  <%= paginate @items %>
</div>    

