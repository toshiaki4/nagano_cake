  <div class="row">
    <% @items.each do |item| %>
     
      <tr>
      <div class="col-md-3"> 
        <td><%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, fallback: "no_image.jpg", format: 'jpeg', size: "300x200" %>
        <% end %></td>
        <td><%= item.name %></td><br>
        <td><%= item.price %></td><br>
      </tr>
      </div>
    <% end %>
    
  </div>  
</div>
<div class="text-right">
