<span style="color:#000000; background-color:#C0C0C0;">注⽂履歴詳細</span><br>
    <table class="table"> 
        <b>注文情報</b><br>
            <tr>
                <th bgcolor="#c0c0c0">注文日</th>
                <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
            </tr>
            <tr>
                <th bgcolor="#c0c0c0">配送先</th>
                <td><%= @order.postal_code %>
                    <%= @order.shipping_address %>
                      <%= @order.name %></td>
            </tr>
            <tr>
                <th bgcolor="#c0c0c0">支払方法</th>
                <td><%= @order.payment_method %></td>
            </tr>    
                <th bgcolor="#c0c0c0">ステータス</th>
                <td><%= @order.order_status %></td>
              
    </table>
<table class="table"> 
    <tr>
        <b>請求情報</b><br>
        <th bgcolor="#c0c0c0">商品合計</th>
        <td><%= @order.total_amount - 800 %></td>
    </tr>
    <tr>
        <th bgcolor="#c0c0c0">配送料</th>
        <td>800</td>
    </td>
    <tr>
        <th bgcolor="#c0c0c0">ご請求額</th>
        <td><%= @order.total_amount %></td>
    </tr>
</table>
<table class="table"> 
    <tr>
        <b>注文内容</b><br>
        <th bgcolor="#c0c0c0">商品</th>
        <th bgcolor="#c0c0c0">単価(税込)</th>
        <th bgcolor="#c0c0c0">個数</th>
        <th bgcolor="#c0c0c0">小計</th>
    </tr>
    <tr>
        <% @order.order_details.each do |order_detail| %>
                <tr>
                  <td><%= order_detail.item.name%></td>
                  <td><%= order_detail.price %></td>
                  <td><%= order_detail.amount %></td>
                  <td><%= order_detail.price * order_detail.amount %></td>
                  <td></td>
                </tr>  
        <% end %>
    </tr>
</table>
