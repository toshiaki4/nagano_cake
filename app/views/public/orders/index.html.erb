<span style="color:#000000; background-color:#C0C0C0;">注文履歴一覧</>
<table class='table table-hover table-inverse'>
<div class="container">
  <div class="row">
    <thead>
        <tr>
          <th bgcolor="#c0c0c0">注文日</th>
          <th bgcolor="#c0c0c0">配送先</th>
          <th bgcolor="#c0c0c0">注文商品</th>
          <th bgcolor="#c0c0c0">支払金額</th>
          <th bgcolor="#c0c0c0">ステータス</th>
          <th bgcolor="#c0c0c0">注文詳細</th>
        </tr>
        
          <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
          <td>
              <%= order.postal_code %><br>
              <%= order.shipping_address %><br>
              <%= order.name %>
          </td>
          <td><% order.order_details.each do |order_detail|%>
                <%= order_detail.item.name %><br>
              <% end %>
          </td>
          <td><%= order.total_amount.to_s(:delimited) %>円</td>
          <td><%= order.order_status %></td>
          <td><%= link_to "表示する", public_order_path(order), class:"btn btn-primary" %></td>
        </tr>  
          <% end %>
        
    </thead>      
  </div>        
</div>
</table>