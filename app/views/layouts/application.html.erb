<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar">
  <div class="container">
    
    <%= link_to "LOGO", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">

      <!-- この下の行に mr-auto クラスを付与するだけ -->
      <ul class="navbar-nav mr-auto">　
        <li class="nav-item">
          <a class="nav-link" href="#"></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"></a>
        </li>
      </ul>
      <% if customer_signed_in? %>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
         ようこそ、<%= current_customer.last_name %>さん!
        </li>
        <li class="nav-item">
          <%= link_to "マイページ", public_customers_path %>
        </li>
        <li class="nav-item">
          <%= link_to "商品一覧", items_path %>
        </li>
        <li class="nav-item">
          <%= link_to "新規登録", new_customer_registration_path %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_customer_session_path, method: :delete  %>
        </li>
      </ul>
      <% elsif admin_signed_in? %>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
         <%= link_to "商品一覧", admin_items_path %>
        </li>
        <li class="nav-item">
          <%= link_to "会員一覧", admin_customers_path %>
        </li>
        <li class="nav-item">
          <%= link_to "注文履歴一覧", admin_path %>
        </li>
        <li class="nav-item">
          <%= link_to "ジャンル一覧", admin_genres_path %>
        </li>
        <li class="nav-item">
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete  %>
        </li>
      </ul>
      <% else %>
      <ul class="navbar-nav">
 
        <li class="nav-item">
          <%= link_to "About", about_path %>
        </li>
        <li class="nav-item">
          <%= link_to "商品一覧", items_path %>
        </li>
        <li class="nav-item">
          <%= link_to "新規登録", new_customer_registration_path %>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン", customer_session_path %>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</nav>

    
    </header>
    <%= yield %>
  </body>
</html>
